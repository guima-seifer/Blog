

<!-- ADD POST MODAL  -->
<div class="container fuelux">
<div class="modal fade" id="addPostModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="addPostModalLabel">Adicionar Postagem</h5>
        <button class="close" data-dismiss="modal"><span class="fa fa-times"></span></button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/posts/add" class="mx-3 my-3" enctype="multipart/form-data">
          <div class="form-label-group">
            <input type="text" class="form-control" name="title" id="title" placeholder="Título" required autofocus>
            <label for="title">Título</label>
          </div>
          <div class="form-group">
            <div id="myPillbox" class="pillbox">
              <ul class="clearfix pill-group">
                <li class="pillbox-input-wrap btn-group">
                  <a class="pillbox-more">and <span class="pillbox-more-count"></span> more...</a>
                  <input type="text" class="form-control dropdown-toggle pillbox-add-item" placeholder="Categorias">

                  <button type="button" class="dropdown-toggle sr-only">
            			<span class="caret"></span>
            			<span class="sr-only">Toggle Dropdown</span>
            		</button>
                  <ul class="suggest dropdown-menu" role="menu" data-toggle="dropdown" data-flip="auto" style="visibility: visible;" aria-expanded="false">
                    <%for(let j=0; j< categories.length; j++){%>
                      <li data-value="<%= categories[j].name.toLowerCase()%>"><%= categories[j].name%></li>
                    <%}%>
                  </ul>
                </li>
              </ul>
            </div>
          </div>

          <div class="form-group bg-faded p-3">
            <label for="file" class="form-control-label">Anexar ficheiros</label>
            <input type="file" name="filetoupload" value="" class="form-control-file" id="file" multiple>
            <small id="fileHelp" class="form-text text-muted">Tamanho máx 3MB</small>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="checkbox" checked name="checkComments" id="checkComments">
            <label class="form-check-label" for="defaultCheck1">
                          Permitir comentários
                        </label>
          </div>

          <div class="form-label-group">
            <textarea id="textarea" name="textarea" class="form-control" rows="3" required autofocus></textarea>
          </div>
      </div>
      <%
                    var d = new Date();
                    var data = d.getUTCDate()
                    %>

        <div class="modal-footer">
          <button class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <button class="btn btn-primary" id="addPostagem" value="">Adicionar Postagem</button>
        </div>
        </form>

    </div>
  </div>
</div>
</div>

<!-- jQuery -->
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script src="/js/dropdown-autoflip.js"></script>
<script src="/js/pillbox.js"></script>

<script type="text/javascript">
  $('#myPillbox').pillbox();
</script>

<script type="text/javascript">
  $("#addPostagem").on('click',function () {
      $(".pillbox").find(".pill").each(function () {
          console.dir($(this)[0].dataset.value);
      })
  })
</script>


