<header id="main-header" class="pt-3 text-white" style="background-color: #236475">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>
          <i class="fa fa-gear"></i>Definições
        </h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="action" class="py-4 mb-4 bg-faded">
  <div class="container">
    <div class="row">
      <div class="btn-group" role="group" aria-label="Basic example">
        <button class="btn btn-secondary btn-lg pr-5 pl-5"><i class="fa fa-arrow-left"></i></button>
        <button class="btn btn-success btn-lg pr-5 pl-5"><i class="fa fa-floppy-o"></i></button>
      </div>
    </div>
  </div>
</section>

<!-- SETTINGS -->
<section id="edit-settings-section">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card border-dark">
          <div class="card-header bg-dark">
            <h4 class="card-title text-white">Editar Definições</h4>
          </div>
          <div class="card-body">
            <form action="">
              <fieldset class="form-group">
                <legend>Permitir Registos</legend>
                <div class="form-check">
                  <label for="" class="form-check-label">
                    <input type="radio" class="form-check-input" value="yes"  checked> Sim
                  </label>
                </div>
                <div class="form-check">
                  <label for="" class="form-check-label">
                    <input type="radio" class="form-check-input" value="no" > Não
                  </label>
                </div>
              </fieldset>
              <hr>
              <fieldset class="form-group">
                <legend>Formato do Blog</legend>
                <div class="form-check">
                  <label for="" class="form-check-label">
                    <input type="radio" class="form-check-input" value="posts"  checked> Post Index
                  </label>
                </div>
                <div class="form-check">
                  <label for="" class="form-check-label">
                    <input type="radio" class="form-check-input" value="page" > Single Page
                  </label>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
