  <script type="text/javascript">
    function changeGrid() {
      if ($('[name$=card-grid]').hasClass('col-md-12')) {
        console.log('teste');
        $('[name$=card-grid]').attr('class', 'col-md-6 col-lg-6');
      } else {
        $('[name$=card-grid]').attr('class', 'col-md-12 col-lg-12');

      }
    }
  </script>

