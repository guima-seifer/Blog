<header id="main-header" class="pt-3 text-white" style="background-color: #236475">
  <div class="container">
    <div class="row mb-4">
      <div class="col-md-6">
        <h1>
          <i class="fa fa-users"></i> Utilizadores
        </h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="action" class="py-4 mb-4 bg-faded">
  <div class="container">
    <div class="row">

    </div>
  </div>
</section>

<%-include('../partials/_msg')%>

<!-- TABLE AREA -->
<section id="table-area-section">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card border-primary">
          <div class="card-header bg-primary text-white">
            <h4>Utilizadores registados</h4>
          </div>
          <div class="container" style="margin: 10px 50px 50px 10px;">
            <table class="table table-striped" id="tableUsers">
              <thead class="thead-inverse">
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Data de registo</th>
              </tr>
              </thead>
              <tbody>
              <% moment.locale('pt_PT')%>
              <%for (let i=0; i < users.length; i++){%>
              <tr>
                <td scope="row"><%=i+1%></td>
                <td><a href="/users/<%= users[i].url_name %>"><%= users[i].name%></a></td>
                <td><%= users[i].email%></td>
                <td><%= moment(users[i].date).format('DD MMMM YYYY') %></td>
              </tr>
              <%}%>
              </tbody>
            </table>
          </div>


        </div>
      </div>
    </div>
  </div>
</section>
