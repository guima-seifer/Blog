<%-include('../partials/_errors')%>
<%-include('../partials/_msg')%>

<!-- REGISTER FORM -->
<section id="login-section" style="margin-top: 2rem;">
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <div class="card-header bg-dark text-white">
            <h4 class="card-title">REGISTO DE CONTA</h4>
          </div>
          <div class="card-block mx-3 my-3 bg-faded">
            <form action="/users/register" method="post">

                <div class="form-group">
                  <label for="name" class="form-control-label">Nome</label>
                  <input type="text" name="name" value="<%=name%>" class="form-control">
                </div>
              <div class="form-group">
                <label for="email" class="form-control-label">Endere√ßo de Email</label>
                <input type="email" name="email" value="<%=email%>" class="form-control">
              </div>
              <div class="form-group">
                <label for="password" class="form-control-label">Palavra-chave</label>
                <input type="password" name="password" value="" class="form-control">
              </div>
              <div class="form-group">
                <label for="password2" class="form-control-label">Confirmar Palavra-chave</label>
                <input type="password" name="password2" value="" class="form-control">
              </div>
              <button class="btn btn-primary btn-block mb-3">Entrar</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
