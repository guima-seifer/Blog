<%-include('../partials/_msg')%>
  <!-- LOGIN FORM -->
  <section id="login-section" style="margin-top: 2rem;">
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h4 class="card-title">LOGIN</h4>
            </div>
            <div class="card-block mx-3 my-3 bg-faded">
              <form action="/users/login" method="post">
                <div class="form-label-group">
                  <input type="email" id="email" name="email" class="form-control" placeholder="Endereço de Email">
                  <label for="email">Endereço de Email</label>
                </div>
                <div class="form-label-group">
                  <input type="password" id="password" name="password" class="form-control" placeholder="Palavra-chave">
                  <label for="password">Palavra-chave</label>
                </div>
                <div class="row text-center mx-2">
                  <button class="btn btn-primary col-lg-12 mt-3">Entrar</button>
                  <a href="/auth/google" class="btn btn-secondary col-lg-12 mt-3"><span class="fa fa-google-plus"></span> Google</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
