<header id="main-header" class="pt-3 text-white" style="background-color: #236475">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>
          <i class="fa fa-user"></i> Perfil utilizador
        </h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="action" class="py-4 mb-4 bg-faded">
  <div class="container">
    <div class="row">
      <div class="col-md-3 mr-auto">
        <a href="/users" class="btn btn-secondary btn-block"><i class="fa fa-arrow-left"></i></a>
      </div>
    </div>
  </div>
</section>

<!-- ACCOUNT EDIT -->
<section id="edit-post-section">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="card">
          <div class="card-header">
            <h4><%= user.name%></h4>
          </div>
          <div class="card-block">
            <form class="mx-3 my-3">
              <!--<div class="form-group">-->
                <!--<label for="name">Name</label>-->
                <!--<input type="text" class="form-control" name="name" id="name" value="<%= user.name%>">-->
              <!--</div>-->
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" readonly value="<%= user.email %>">
              </div>
              <div class="form-group">
                <label for="bio">Bio</label>
                <div id="bio" style="resize: none;" readonly class="form-control"></div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <h3>Imagem de Perfil</h3>
          <%if(user.avatar === undefined || user.avatar === ''){%>
        <img src="img/default.png" alt="" class="d-block img-fluid mb-3 rounded">
          <%} else {%>
        <img src="img/<%= user.avatar%>" alt="" class="d-block img-fluid mb-3 rounded-circle">
          <%}%>
      </div>
    </div>
  </div>
</section>

<script>
    <% var bio = user.bio %>
    <% bio = bio.replace(/[\t\r\n]+/g, ''); %>
  document.getElementById("bio").innerHTML = "<%- bio%>";
</script>