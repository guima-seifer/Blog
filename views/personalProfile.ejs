<header id="main-header" class="pt-3 text-white"  style="background-color: #236475;">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>
          <i class="fa fa-user"></i> √Årea Pessoal
        </h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="action" class="py-4 mb-4 bg-faded">
  <div class="container">
    <div class="row">
      <div class="col-md-3 mr-auto">
        <a href="/users" class="btn btn-secondary btn-block"><i class="fa fa-arrow-left"></i> Voltar</a>
      </div>
      <div class="col-md-4">
        <a data-toggle="modal" style="color: #fff;" data-target="#passwordModal" class="btn btn-success btn-block"><i class="fa fa-lock"></i> Alterar Palavra-Passe</a>
      </div>
      <div class="col-md-3">
        <a href="index.html" class="btn btn-danger btn-block"><i class="fa fa-remove"></i> Eliminar Conta</a>
      </div>
    </div>
  </div>
</section>

<!-- ACCOUNT EDIT -->
<section id="edit-post-section">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="card">
          <div class="card-header">
            <h4>Editar Perfil</h4>
          </div>
          <div class="card-block">
            <form class="mx-3 my-3" method="POST" action="/users/update/<%= user._id%>">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" id="name" value="<%= user.name %>">
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" id="email" value="<%= user.email %>">
              </div>
              <div class="form-group">
                <label for="bio">Bio</label>
                <textarea name="bio" class="form-control"><%= user.bio %></textarea>
              </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success btn-lg" value="Guardar"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                </div>
            </form>
          </div>

        </div>
      </div>
      <div class="col-md-3">
        <h3>Imagem de Perfil</h3>
        <%if(user.avatar === undefined || user.avatar === ''){%>
        <img src="img/default.png" alt="" class="d-block img-fluid mb-3 rounded">
        <%} else {%>
        <img src="img/<%= user.avatar%>" alt="" class="d-block img-fluid mb-3 rounded-circle">
        <%}%>
        <div class="btn-group offset-3" role="group" aria-label="Basic example">
        <button data-toggle="modal" data-target="#avatarModal" class="btn btn-primary btn-lg"><i class="fa fa-pencil-square-o"></i></button>
        <button data-toggle="modal" data-target="#avatarModal" class="btn btn-danger btn-lg"><i class="fa fa-trash-o"></i></button>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- PASSWORD MODAL -->
<div class="modal fade" id="passwordModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="passwordModalLabel">Alterar Palavra-chave</h5>
        <button type="close" name="button" data-dismiss="modal"><span>&times;</span></button>
      </div>
      <div class="modal-body">
        <form action="">
          <div class="form-group">
            <label for="password" class="form-control-label">Palavra-chave</label>
            <input type="password" name="" value="" class="form-control">
          </div>
          <div class="form-group">
            <label for="password2" class="form-control-label">Confirmar</label>
            <input type="password" name="" value="" class="form-control">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="bn btn-secondary" data-dismiss="modal">Fechar</button>
        <button class="bn btn-warning" data-dismiss="modal">Editar</button>
      </div>
    </div>
  </div>
</div>

<!--AVATAR MODAL-->
<div class="modal fade" id="avatarModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="passwordModalLabel">Alterar avatar</h5>
        <button type="close" name="button" data-dismiss="modal"><span>&times;</span></button>
      </div>
      <div class="modal-body">
        <form method="POST" action="/file/upload" enctype="multipart/form-data">
          <div class="form-group">
            <label for="password2" class="form-control-label">Selecionar ficheiro</label>
            <input type="file" name="avatar" class="form-control">
          </div>
          <div class="modal-footer">
            <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Fechar">
            <input type="submit" class="btn btn-warning" value="Editar">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
